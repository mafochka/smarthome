            function addToTableBody(work)
            {
                var entry = [work],
                tableContent = "<tr>";

                for (var i = 0; i < 1; i++)
                {
                    tableContent += "<td>" + entry[i] + "</td>";
                };
                tableContent += "</tr>";
                tableBody.innerHTML += tableContent;

            };

            function addSelect()
            {
                
            };
